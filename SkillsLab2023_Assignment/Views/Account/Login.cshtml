
@{
    ViewBag.Title = "Login";

}

<link href="~/Content/app/Login-Register.css" rel="stylesheet" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-body">
                <h2 class="card-title text-center">Login</h2>
                <!-- Login Form -->
                <form @*onsubmit="submitLoginForm(event)"*@ method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" required>
                    </div>
                    <div class="col-12 text-center">
                        <button type="button" onclick="submitLoginForm()" class="btn btn-primary">Submit</button>
                    </div>
                    <div class="my-3 text-center">
                        Do not have an account? <a href="/Account/Register">Sign Up</a>
                    </div>
                </form>
                <div id="message-container" style="display: none"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/Login.js"></script>