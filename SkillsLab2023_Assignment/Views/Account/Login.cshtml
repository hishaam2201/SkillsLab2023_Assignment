
@{
    ViewBag.Title = "Login";

}

<link href="~/Content/app/login_register.css" rel="stylesheet" />


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    <!-- Login Form -->
                    <form class="row g-3 mt-2" id="loginForm">
                        <div class="col-12 text-center">
                            <label for="email" class="form-label">
                                <input id="email" type="email" class="form-control" name="email" placeholder="Email">
                            </label>
                        </div>
                        <div class="col-12 text-center">
                            <label for="password" class="form-label">
                                <input id="password" type="password" class="form-control" name="password" placeholder="Password">
                            </label>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary" onclick="submitForm(event)">Sign in</button>
                        </div>
                        <div id="message" class="text-center"></div>
                        <div class="mt-3 text-center">
                            <a href="/Account/Register">Do not have an account? Sign Up</a>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/login.js"></script>